<style>
/* The cart container */
#cart-container {
  display: flex;
  flex-direction: column;
  position: fixed;
  top: 62px;
  right: 0;
  width: 300px;
  height: calc(100vh - 50px);
  overflow-y: auto;
  padding: 20px;
  background-color: aliceblue;
}

/* The individual cart item */
.cart {
  border: 1px solid black;
  padding: 10px;
  text-align: center;
  background: aliceblue;
  display: inline-block;
  flex-direction: column;
  line-height: 2.5rem;
}

.cart-row {
  display: flex;
  justify-content: space-between;
}

.cart-label {
  font-weight: bold;
  margin-right: 10px;
}

.cart-value {
  flex-grow: 1;
}

.cart strong {
  display: block;
  margin-bottom: 10px;
}

.cart input[type="number"] {
  width: 50px;
  margin-right: 5px;
}

.cart input[type="submit"] {
  background-color: #4CAF50;
  border: none;
  color: white;
  padding: 5px 10px;
  text-align: center;
  text-decoration: none;
  display: inline-block;
  font-size: 14px;
  margin: 4px 2px;
  cursor: pointer;
}

.cart input[type="submit"]:hover {
  background-color: #3e8e41;
}

.cart form {
  display: inline-block;
}
</style>

<div id="cart-container">
  <% @cart.orderables.each do |orderable| %>
    <% book = orderable.book %>

    <div id="<%= "cart-#{book.id}"%>">
      <div class="cart">
        <div class="cart-row">
          <div class="cart-label">Name:</div>
          <div class="cart-value"><%= book.title %></div>
        </div>
        <div class="cart-row">
          <div class="cart-label">Description:</div>
          <div class="cart-value"><%= book.description %></div>
        </div>
        <div class="cart-row">
          <div class="cart-label">Price:</div>
          <div class="cart-value"><%= book.price %></div>
        </div>

        <%= form_with(url: cart_add_path) do |f| %>
          <%= f.hidden_field :id, value: book.id%>
          <%= f.number_field :quantity, value: orderable.quantity, min: 0%>
          <%= f.submit "Add To Cart"%>
        <%end%>

        <%= form_with(url: cart_remove_path) do |f| %>
          <%= f.hidden_field :id, value: orderable.id%>
          <%= f.submit "X"%>
        <%end%>

        <div class="cart-row">
          <div class="cart-label">Total:</div>
          <div class="cart-value"><%= orderable.total %></div>
        </div>
      </div>
    </div>
  <% end %>
</div>