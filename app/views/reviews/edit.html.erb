<style>
.container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 75vh;
}

form {
  max-width: 500px;
  width: 100%;
}



.form-group {
  margin-bottom: 20px;
}


form input,
textarea,
select {
  width: 100%;
  padding: 10px;
  border: none;
  border-radius: 4px;
  box-sizing: border-box;
  margin-top: 5px;
  background-color: #fff;
  border: 1px solid #ccc;
}



form select {
  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  background-image: url('https://cdn4.iconfinder.com/data/icons/ionicons/512/icon-ios7-arrow-down-512.png');
  background-repeat: no-repeat;
  background-position: right 10px center;
  background-size: 12px;
  padding-right: 30px;
}

form input[type="file"] {
  border: none;
  padding: 0;
  margin-top: 5px;
  font-size: 14px;
}



</style>

<div class="container">



<%= simple_form_for([@book, @review]) do |f| %>
      <div class="form-group">

<h1>Edit Review</h1>
</div>
      <div class="form-group">

<%= f.input :rating %>
</div>
      <div class="form-group">

<%= f.input :comment %>
</div>
<%= f.button :submit %>
<%end%>